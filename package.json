{
  "name": "learna",
  "version": "1.0.0",
  "description": "www.learna.ac.uk",
  "author": "Courtenay Probert, Alan Viirna",
  "private": true,
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "nuxt",
    "nuxt": "node get-data && start npm run functions && nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "serve": "nuxt serve",
    "strapi": "start https://learna-cms.herokuapp.com/admin/",
    "export:staging": "(npm run clean) && (node get-data) && (npm run prep:staging) && cross-env NODE_ENV=staging nuxt build && nuxt export",
    "export:production": "(npm run clean) && (node get-data) && (npm run prep:production) && cross-env NODE_ENV=production nuxt build && nuxt export",
    "functions": "cd functions && firebase emulators:start --only functions",
    "analyze": "npx nuxt build --analyze",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "get-data": "node get-data",
    "firehost": "(cross-env NODE_ENV=staging npm run generate) && (firebase emulators:start --only hosting)",
    "clean": "rimraf \"src/content/courses\" && rimraf \"src/content/subjects\" && rimraf \"src/static\" && rimraf \".nuxt\" && rimraf \"public\"",
    "clean:npm": "rimraf \"node_modules\" && (cd functions & rimraf \"node_modules\") && cd .. && (cd src & rimraf \"node_modules\")",
    "prep:staging": "copyfiles ./instance/staging/**/* ./src/static --up 2 --verbose",
    "prep:production": "copyfiles ./instance/production/**/* ./src/static --up 2",
    "deploy:staging": "(npm run export:staging) && (firebase deploy --only hosting:staging)",
    "deploy:production": "(npm run export:production) && (firebase deploy --only hosting:production)",
    "deploy:functions": "cd functions && firebase deploy --only functions",
    "lighthouse": "lighthouse https://www.learna.ac.uk --budget-path=./budget.json",
    "postinstall": "npm install copyfiles -g && npm install rimraf -g && npm install -g firebase-tools && cd functions && npm install && cd .. && node get-data"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/google-analytics": "^2.3.0",
    "axios": "^0.19.2",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "fs-extra": "^9.0.0",
    "node-sass": "^4.14.1",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2"
  },
  "dependencies": {
    "@nuxt/content": "^1.2.0",
    "@nuxtjs/gtm": "^2.2.3",
    "@nuxtjs/sitemap": "^2.2.0",
    "bootstrap-vue": "^2.14.0",
    "cookie-universal-nuxt": "^2.1.4",
    "copyfiles": "^2.3.0",
    "marked": "^1.0.0",
    "nuxt": "^2.13.0",
    "nuxt-google-optimize": "^0.5.4",
    "nuxt-lazy-load": "^1.2.2",
    "vue-scrollactive": "^0.8.0",
    "vue-scrollto": "^2.18.1"
  },
  "optionalDependencies": {
    "jquery": "1.9.1",
    "fsevents": "^2.1.3",
    "typescript": "^2.8.0",
    "tsutils": "^3.17.1"
  }
}
